function mkrepo {
        printf "Repository name? "
        read name;
        # Create the directori on Documentos/Repos
        cd Documents
        cd Repos
        mkdir $name
        cd $name
        git init
        #
        #Copy README and .gitignore
        cd
        cd Documents
        cd GitInit
        cp README.MD ../Repos/$name
        cp .gitignore ../Repos/$name

        #Back to repo
        cd ..
        cd Repos
        cd $name
        #To make the repo provate change to: hub create -p
        hub create
        git add .
        git commit -m "First commit: add README and .gitignore."
        git push -u origin master
}
