
# MKREPO
function mkrepo {
        printf "Repository name? "
        read name;

        # Create the directori on Documentos
        cd
        cd Documents || cd Documentos
        mkdir $name
        sleep 1
        cd $name
        git init

        #README and .gitignore
        echo "Para ver la sintaxis de MD visitar [este](http://github.com/mesaglio/template) repositorios" >> README.md
        touch .gitignore

        #To make the repo provate change to: hub create -p
        hub create
        git add .
        git commit -m "First commit: add README and .gitignore."
        git push -u origin master
}
